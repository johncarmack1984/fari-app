                    {
                      "id": "4c6a6e2d-7940-4afb-b589-dd5a2f40ec4c",
                      "label": "Near",
                      "type": "Text",
                      "value": "A short distance away. One hex away.",
                      "meta": {}
                    },
                    {
                      "id": "612aebd7-0121-4b6c-82e6-0938d7c73f3a",
                      "label": "Far",
                      "type": "Text",
                      "value": "Beyond Near but within range. Two hexes away.",
                      "meta": {}
                    },
                    {
